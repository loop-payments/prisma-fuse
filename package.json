{
  "name": "prisma-fuse",
  "version": "0.0.1",
  "description": "Fuse multiple Prisma schema files into one.",
  "repository": {
    "type": "git",
    "url": "https://github.com/loop-payments/prisma-fuse.git"
  },
  "license": "MIT",
  "author": "engineering@loop.com",
  "type": "module",
  "imports": {
    "#src/*": "./dist/*"
  },
  "bin": "dist/cli.js",
  "files": [
    "dist/**/*",
    "!dist/**/*.test.js"
  ],
  "scripts": {
    "build": "tsc",
    "setup:precommit-hooks": "husky install",
    "style:eslint": "eslint src --fix --max-warnings=0 --cache",
    "style:eslint:check": "eslint src --max-warnings=0 --cache",
    "style:prettier": "prettier --write src",
    "style:prettier:check": "prettier --check src",
    "test": "jest",
    "test:cli": "./dist/cli.js -b 'fixture/prisma/base.prisma' -o 'fixture/prisma/schema.prisma' -s 'fixture/**/*.prisma' -e 'fixture/**/schema.prisma' --strip-comments --verbose"
  },
  "devDependencies": {
    "@tsconfig/esm": "^1.0.3",
    "@tsconfig/node18": "^2.0.1",
    "@tsconfig/strictest": "^2.0.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^20.2.5",
    "@types/pluralize": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-canonical": "^4.2.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.2.2",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "commander": "^10.0.1",
    "glob": "^10.2.6"
  },
  "packageManager": "yarn@3.6.0"
}
