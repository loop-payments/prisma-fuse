{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "target": "ES2015",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "paths": {
      "#src/*": ["./src/*"]
    },
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
